<h1>My Tasks</h1>
<% @tasks.each do |task| %>
  <input type="checkbox" name="title" <%= task.completed ? "checked" : "" %>> <%= link_to task.title, task_path(task) %>  <%= link_to "Delete", task_path(task),
      method: :delete,
      data: { confirm: "Are you sure?" } %><br>
<% end %>
